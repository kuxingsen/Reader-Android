<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_download_cover_iv"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="#ddd"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_download_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                tools:text="六脉神剑"/>

            <TextView
                android:id="@+id/item_download_author_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="作者"
                android:textColor="@color/grey_font1"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/item_download_category_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textColor="@color/grey_font1"
                android:textSize="13dp"/>

            <ProgressBar
                android:id="@+id/item_download_progress_pb"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:indeterminateOnly="false"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:progressDrawable="@drawable/progress_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_download_button_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/download_start"/>

            <TextView
                android:id="@+id/item_download_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始下载"
                android:textColor="@color/grey_font1"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_separator"/>
</RelativeLayout>